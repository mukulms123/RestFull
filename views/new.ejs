<%- include("partials/header") -%> 

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label for="blog[title]">Title: </label>
                <input type="text" name="blog[title]" placeholder="title">
            </div>
            <div class="field">
                <label for="blog[image]">Image Url: </label>
            <input type="text" name="blog[image]" placeholder="image">
            </div>
            <div class="field">
                <label for="blog[body]">Body: </label>
                <textarea name="blog[body]" placeholder="body"></textarea>
            </div>
            <div class="field">
                <input class="ui inverted blue button" type="submit" value="Submit">
            </div>
        </form>
    </div>
</div>
