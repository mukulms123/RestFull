<%- include("partials/header") -%> 

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=Blogs.title  %></div>
    <div>
        <form class="ui form" action="/blogs/<%=Blogs._id  %>?_method=PUT " method="POST">
            <div class="field">
                <label for="blog[title]">Title: </label>
                <input type="text" name="blog[title]" value="<%=  Blogs.title %> ">
            </div>
            <div class="field">
                <label for="blog[image]">Image Url: </label>
            <input type="text" name="blog[image]" value="<%=  Blogs.image %> ">
            </div>
            <div class="field">
                <label for="blog[body]">Body: </label>
                <textarea name="blog[body]"><%=  Blogs.body %></textarea>
            </div>
            <div class="field">
                <input class="ui inverted green button" type="submit" value="Save">
                <a class="ui inverted secondary button" href="/blogs/<%= Blogs._id %> ">Back</a>
            </div>
        </form>
    </div>
</div>
