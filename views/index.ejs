<%- include("partials/header") -%> 
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <h1>Index Page</h1>
            
            <% for(var i=0;i< Blogs.length; i++){ %> 
                <div class="item">
                    <div class="image">
                        <img src="<%= Blogs[i].image %> " >
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/:<%= Blogs._id %> ">
                            <%= Blogs[i].title%>
                        </a>
                        <div class="meta">
                            <span>Created: <%= Blogs[i].created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%-Blogs[i].body.substring(0,100)  %>....</p>
                        </div>
                        <div class="extra">
                            <a class="ui inverted violet button" href="/blogs/<%=Blogs[i]._id  %> ">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                        </div>
                    
                </div>
            <% } %> 
        </div>
    </div>
</div>
<%- include("partials/footer") -%> 